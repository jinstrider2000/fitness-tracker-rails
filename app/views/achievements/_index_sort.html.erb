<%= tag.div class: %w[row text-center], style: "margin-bottom:25px;" do %>
  <%= form_tag user_achievements_path(@user.slug), method: :get do %>
    <%= hidden_field_tag 'activity_type', @activity_type %>
    <%= label_tag 'filter', t(".filter") %>
    <%= tag.select name: 'filter', id: 'filter' do %>
      <%= render collection: filter_options_array, partial: 'index_sort_option', locals: {selection_name: :filter} %>
    <% end %>
    <%= label_tag 'order', t(".order") %>
    <%= tag.select name: 'order', id: 'order' do %>
      <%= render collection: order_options_array, partial: 'index_sort_option', locals: {selection_name: :order} %>
    <% end %>
    <%= submit_tag t(".submit"), class: %w[btn btn-default btn-xs] %>
  <% end %>
<% end %>