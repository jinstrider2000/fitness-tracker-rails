<%= tag.div class: %w[form-block center-block] do %>  
  <%= form_for achievement, method: html_method, url: path do |form| %>
    <%= form.hidden_field :user_id %>
    <%= tag.div class: 'form-group' do %>
      <%= label_tag 'activity_type', "Activity Type", class: "center-block" %>
      <%= render partial: 'activity_type_selection', locals: {html_method: html_method, achievement: achievement} %>
    <% end %>
    <% if activity_type_param_valid? || html_method == :patch %>
      <%= tag.div class: 'form-group' do %>
        <%= render partial: "#{achievement.activity_type.downcase}_activity_fields", locals: {form: form, activity: achievement.activity} %>
      <% end %>
      <%= tag.div class: 'form-group' do %>
        <%= form.label :completed_on, 'Completed On' %>
        <%= form.date_select :completed_on, default: Date.today, order: [:month, :day, :year], date_separator: "/ ", start_year: Date.today.year - 20, end_year: Date.today.year, class: 'form-control' %>
      <% end %>
      <%= tag.div class: 'form-group' do %>
        <%= form.label :comment %>
        <%= form.text_area :comment, class: 'form-control' %>
      <% end %>
      <%= tag.div class: %w[form-group text-center] do %>
        <%= form.submit class: %w[btn btn-default] %>
      <% end %>
    <% else %>
      <%= tag.p "Select an activity", class: "text-center" %>
    <% end %>
  <% end %>
<% end %>