<%= content_for :title do %>
  <%= tag.title t(".title") %>
<% end %>

<%= content_for :doc_ready_script do %>
  <%= javascript_tag type: "text/javascript" do %>
    $(document).on('turbolinks:load', function() {
      setLocale();
      flashToggle();
    });
  <% end %>
<% end %>

<%= tag.div class: %w[row text-center] do %>
  <%= image_tag "achievement_icon", class: %w[img-responsive index-icon], alt: "Achievement Icon" %>
  <%= tag.h2 t ".heading" %>
<% end %>

<%= tag.div id: "achievement-form" do %>
  <%= render partial: 'form', locals: {html_method: :post, path: achievements_path, achievement: @achievement} %>
<% end %>