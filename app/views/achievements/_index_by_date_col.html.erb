<% if index_by_date_col_counter == 0 %>
  <%= tag.div class: %w[col-sm-3 card-style], style: "padding-bottom:5px;" do %>
    <%= tag.h3 print_date_index_style(index_by_date_col.first.completed_on), class: "text-center" %>
    <%= render collection: index_by_date_col, partial: 'achievement' %>
  <% end %>
<% else %>
  <%= tag.div class: %w[col-sm-3 col-sm-offset-1 card-style], style: "padding-bottom:5px;" do %>
    <%= tag.h3 print_date_index_style(index_by_date_col.first.completed_on), class: "text-center" %>
    <%= render collection: index_by_date_col, partial: 'achievement' %>
    <%= tag.p "Net Calories: #{index_by_date_col.first.daily_total.net_calories}", class: %w[text-center index-style], style: "padding-top:10px;" %>
  <% end %>
<% end %>
