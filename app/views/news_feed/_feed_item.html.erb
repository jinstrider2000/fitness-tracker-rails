<%= tag.div id: feed_item.id, class: %w[news-feed-item], data: {created_at: feed_item.created_at} do %>
  <%= tag.span time_since_created(feed_item) %>
  <%= tag.div class: %[row] do %>
    <%= tag.div class: %[col-xs-4] do %>
      <%= link_to user_path(feed_item.user.slug) do %>
        <%= image_tag profile_pic_path(feed_item.user), class: %[index-icon img-circle] %>
      <% end %>
    <% end %>
    <%= tag.div class: %[col-xs-8] do %>
      <%= tag.div class: %[row] do %>
        <%= image_tag "#{feed_item.activity_type.downcase}_icon", class: %w[mini-pic-display] %>
        <%= render partial: File.join("achievements",feed_item.activity_type.downcase), locals: {feed_item.activity_type.downcase.to_sym => feed_item} %>
      <% end %>
      <%= tag.div class: %[row] do %>
        <%= tag.p feed_item.comment, style: "width:85%;" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>