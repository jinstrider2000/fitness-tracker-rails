<%= content_for :title do %>
  <%= tag.title t("default") %>
<% end %>

<%= content_for :doc_ready_script do %>
  <%= javascript_tag type: "text/javascript" do %>
    $(function() {
      flashToggle();
    });
  <% end %>
<% end %>

<%= tag.h2 "", id: "user-index-heading", class: %w[text-center] %>
<%= tag.div class: %[row text-center] do %>
  <%= link_to t(".most_active"), most_active_today_users_path %>
<% end %>
<%= tag.div "", id: "user-index-items" %>

<%= javascript_tag type: "text/x-handlebars-template", id: "user-index-template" do %>
  <div id="{{id}}" class="user-index card-style col-sm-4">
    <a href="{{view.show_link}}"><img src="{{view.profile_pic_path}}" alt="" class="img-circle index-icon"></a>
    <span class="follow-status-msg follow-status-msg-index">{{view.follow_status}}</span>
    <div class="user-actions-btn text-center">
      {{> actionButton }}
    </div>
    <h3 class="index-name">{{truncated_name}}</h3>
    <p class="index-quote">{{truncated_quote}}</p>
  </div>
<% end %>

<%= javascript_tag type: "text/x-handlebars-template", id: "user-action-button-template" do %>
  <div class="btn-group">
    <a href="/#" class="{{view.primary_action.classes}}" data-slug="{{slug}}" data-action="{{view.primary_action.name}}" onclick="event.preventDefault();primaryActionButton(this)">{{view.primary_action.locale_name}}</a>
    {{#if secondary_action}}
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        {{#each view.secondary_action}}
          <li><a href="/#" data-slug="{{../../slug}}" data-action="{{name}}" onclick="event.preventDefault();secondaryActionButton(this)">{{locale_name}}</a></li>
        {{/each}}
      </ul>
    {{/if}}
  </div>
<% end %>
