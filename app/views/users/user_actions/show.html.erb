<div class="row" style="margin-bottom:20px;">
	<div class="col-sm-12">
		<img class="profile-pic-display img-circle" src="<%=profile_pic_path(@user)%>" alt="<%=@user.first_name%>'s Profile Pic">
    <% if viewing_own_profile_while_logged_in?(@user) %>
      <%= tag.h2 t "#{params[:controller]}.#{params[:action]}.my_heading", first_name: @user.first_name %>
      <%= tag.a "Edit", href: edit_user_registration_path %>
    <% else %>
      <%= tag.h2 t "#{params[:controller]}.#{params[:action]}.other_user_heading", full_name: @user.name %>
    <% end %>
		<h4 id="calorie-goal-display"><%=t "#{params[:controller]}.#{params[:action]}.daily_calorie_goal"%> <%=@user.daily_calorie_intake_goal%></h4>
	</div>
</div>
<div class="row">
	<div class="col-sm-5 card-style clearfix">
		<h3><%= t "#{params[:controller]}.#{params[:action]}.recent_exercises" %></h3>
		<% if @user.recent_exercises.count < 1 %>
			<p><%= t "#{params[:controller]}.#{params[:action]}.no_activity" %></p>
		<% else %>
			<ul>
			<% @user.recent_exercises.each do |exercise| %>
				<li class="index-style"><%=print_time(exercise.created_at)%> - <%=attr_display_str(exercise,["name","calories_burned"])%></li>
			<% end %>
			</ul>
		<% end %>
		<a class="more-link" href="<%=user_exercises_path(@user)%>">more</a>
	</div>
	<div class="col-sm-5 col-sm-offset-2 card-style clearfix">
		<h3><%= t "#{params[:controller]}.#{params[:action]}.recent_foods" %></h3>
		<% if @user.recent_foods.count < 1 %>
			<p><%= t "#{params[:controller]}.#{params[:action]}.no_activity" %></p>
		<% else %>
			<ul>
			<% @user.recent_meals.each do |food| %>
				<li class="index-style"><%=print_time(food.created_at)%> - <%=attr_display_str(food,["name","calories"])%></li>
			<% end %>
			</ul>
		<% end %>
		<a class="more-link" href="<%=user_foods_path(@user)%>">more</a>
	</div>
</div>
