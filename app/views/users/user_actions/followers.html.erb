<%= content_for :title do %>
  <%= tag.title t(".title", user_name: @user.first_name) %>
<% end %>
<% if viewing_own_profile_while_logged_in? %>
  <%= tag.h2 t(".my_heading"), class: %w[text-center] %>
<% else %>
  <%= tag.h2 t(".other_user_heading", user_name: @user.first_name), class: %w[text-center] %>
<% end %>

<% if @users.size == 0 %>
  <%= tag.div class: %w[row text-center no-items-style] do %>
    <%= tag.p t ".no_items" %>
  <% end %>
<% else %>
  <%= render collection: @users, partial: 'user' %>
<% end %>
