<%= content_for :title do %>
  <%= tag.title t(".title") %>
<% end %>

<%= tag.h2 t(".heading"), class: %w[text-center] %>
<% if @users.size == 0 %>
  <%= tag.div class: %w[row text-center no-items-style] do %>
    <%= tag.p t ".no_items" %>
  <% end %>
<% else %>
  <%= render collection: @users, partial: 'user' %>
<% end %>
